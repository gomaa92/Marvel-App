<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.MarvelApp" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/black_1b1b1b</item>
        <item name="colorPrimaryVariant">@color/black_1b1b1b</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/red_b6151c</item>
        <item name="colorSecondaryVariant">@color/red_b6151c</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->

    </style>

    <style name="CharacterDetailsActivityTheme" parent="Theme.MarvelApp">
        <!--Customize your theme here. -->
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:navigationBarColor">@android:color/transparent</item>
        <item name="android:windowTranslucentNavigation">true</item>
    </style>

    <style name="CustomCardViewStyle" parent="@style/Widget.MaterialComponents.CardView">
        <item name="shapeAppearanceOverlay">@style/ShapeAppearanceOverlay_card_custom_corners</item>
    </style>


    <style name="ShapeAppearanceOverlay_card_custom_corners" parent="">
        <item name="cornerSizeTopRight">0dp</item>
        <item name="cornerSizeTopLeft">0dp</item>
        <item name="cornerSizeBottomRight">@dimen/_18ssp</item>
        <item name="cornerSizeBottomLeft">@dimen/_18ssp</item>
    </style>
    <style name="CustomImageSectionViewStyle" parent="@style/Widget.MaterialComponents.CardView">
        <item name="shapeAppearanceOverlay">@style/section_image_corner</item>
    </style>

    <style name="section_image_corner" parent="">
        <item name="cornerSizeTopRight">@dimen/_6sdp</item>
        <item name="cornerSizeTopLeft">@dimen/_6sdp</item>
        <item name="cornerSizeBottomRight">@dimen/_6sdp</item>
        <item name="cornerSizeBottomLeft">@dimen/_6sdp</item>
    </style>
</resources>